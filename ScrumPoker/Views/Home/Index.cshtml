@model ScrumPoker.Models.PlayerGameViewModel

@{
    ViewBag.Title = "New Game";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="navBar">
</div>
<div class="logoDiv">
    <img src="~/images/ScrumPokerShowdownLogo.png" 
    alt="Scrum Poker Logo" 
    id="homeScreenLogo"/>
</div>
<div class="startScreen">
    <div class="startScreenContent shadowSmall">
        @using (var newGameForm = Html.BeginForm("StartGame", "Home", 
        FormMethod.Post, new { @class = "startScreenForm"}))
        {
            @Html.LabelFor(m => m.PlayerName)
            @Html.TextBoxFor(m => m.PlayerName, new { @class = "input formBorder" })

            @Html.LabelFor(m => m.VotingSystem)
            @Html.DropDownListFor(
                m => m.VotingSystem,
                new SelectList(new List<string> { "1,2,3,5,8,13,21,34" }),
                new { @class = "input formBorder" })

            <input type="submit" value="Start" class="submitButton" />
        }
    </div>
</div>

